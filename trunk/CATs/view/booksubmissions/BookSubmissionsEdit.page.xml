<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/lists/CatBookSubmissionsList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{catBookSubmissionsHome.wire}"/>
   <param name="catBookSubmissionsFrom"/>
   <param name="id" value="#{catBookSubmissionsHome.id}"/>
   <param name="catBookSubmissionsId" value="#{catBookSubmissionsHome.catBookSubmissionsId}"/>
   <param name="selectedTab" value="#{catBookSubmissionsHome.selectedTab}"/>

   <navigation from-action="#{catBookSubmissionsHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/booksubmissions/BookSubmissionsEdit.xhtml"/>
      </rule>
   </navigation>
   <navigation from-action="#{catBookSubmissionsHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/booksubmissions/BookSubmissionsEdit.xhtml"/>
      </rule>
   </navigation>
   
   <navigation from-action="#{catBookSubmissionsHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/lists/CatBookSubmissionsList.xhtml"/>
      </rule>
   </navigation>

   <navigation>
   		<rule if-outcome="cancel" >
         <end-conversation before-redirect="true"/>
         <redirect view-id="/booksubmissions/BookSubmissionsEdit.xhtml"/>
    	</rule>
   </navigation>


</page>

<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/CatCollectionsList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{catCollectionsHome.wire}"/>

   <param name="catCollectionsFrom"/>
   <param name="catCollectionsId" value="#{catCollectionsHome.catCollectionsId}"/>
   <param name="id" value="#{catCollectionsHome.catCollectionsId}"/>
	<param name="notesSortOrder" value="#{catCollectionsHome.notesSortOrder}"/>	
	<param name="selectedTab" value="#{catCollectionsHome.selectedTab}"/>

   <navigation from-action="#{catCollectionsHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/collections/CollectionsEdit.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{catCollectionsHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/collections/CollectionsEdit.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{catCollectionsHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/collections/CollectionsEdit.xhtml"/>
      </rule>
   </navigation>
   <navigation>
        <rule if-outcome="cancel" >
           <end-conversation before-redirect="true"/>
       	   <redirect view-id="/collections/CollectionsEdit.xhtml"/>
    	</rule>
   </navigation>

</page>

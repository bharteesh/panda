<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/lists/CatBooksList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{catBooksHome.wire}"/>
   <param name="catBooksFrom"/>
   <param name="id" value="#{catBooksHome.id}"/>
   <param name="catBooksId" value="#{catBooksHome.catBooksId}"/>
   <param name="selectedTab" value="#{catBooksHome.selectedTab}"/>

   <navigation from-action="#{catBooksHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/books/BooksEdit.xhtml"/>
      </rule>
   </navigation>
   <navigation from-action="#{catBooksHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/books/BooksEdit.xhtml"/>
      </rule>
   </navigation>
   
   <navigation from-action="#{catBooksHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/lists/CatBooksList.xhtml"/>
      </rule>
   </navigation>

   <navigation>
   		<rule if-outcome="cancel" >
         <end-conversation before-redirect="true"/>
         <redirect view-id="/books/BooksEdit.xhtml"/>
    	</rule>
   </navigation>


</page>

<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/lists/CatBookSubmissionsList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{catBookVersionsHome.wire}"/>
   <param name="catBookVersionsFrom"/>
   <param name="id" value="#{catBookVersionsHome.id}"/>
   <param name="catBookVersionsId" value="#{catBookVersionsHome.catBookVersionsId}"/>
   <param name="selectedTab" value="#{catBookVersionsHome.selectedTab}"/>

   <navigation from-action="#{catBookVersionsHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/bookversions/BookVersionsEdit.xhtml"/>
      </rule>
   </navigation>
   <navigation from-action="#{catBookVersionsHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/bookversions/BookVersionsEdit.xhtml"/>
      </rule>
   </navigation>
   
   <navigation from-action="#{catBookVersionsHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/lists/CatBookVersionsList.xhtml"/>
      </rule>
   </navigation>

   <navigation>
   		<rule if-outcome="cancel" >
         <end-conversation before-redirect="true"/>
         <redirect view-id="/bookversions/BookVersionsEdit.xhtml"/>
    	</rule>
   </navigation>


</page>
<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/lists/CatContractsList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{catContractsHome.wire}"/>

   <param name="catContractsFrom"/>
   <param name="catContractsId" value="#{catContractsHome.catContractsId}"/>
   <param name="id" value="#{catContractsHome.catContractsId}"/>
   <param name="notesSortOrder" value="#{catContractsHome.notesSortOrder}"/>
   <param name="selectedTab" value="#{catContractsHome.selectedTab}"/>

   <navigation from-action="#{catContractsHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/contracts/ContractsRecord.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{catContractsHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/contracts/ContractsRecord.xhtml"/>
      </rule>
   </navigation>
   
   <navigation>
            <rule if-outcome="cancel" >
                <end-conversation before-redirect="true"/>
                <redirect view-id="/contracts/ContractsRecord.xhtml"/>
            </rule>
     </navigation>

</page>

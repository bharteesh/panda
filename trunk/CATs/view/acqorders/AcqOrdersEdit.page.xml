<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/CatAcqOrdersList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{catAcqOrdersHome.wire}"/>

   <param name="catAcqOrdersFrom"/>
   <param name="catAcqOrdersId" value="#{catAcqOrdersHome.catAcqOrdersId}"/>
   <param name="id" value="#{catAcqOrdersHome.catAcqOrdersId}"/>
   <param name="notesSortOrder" value="#{catAcqOrdersHome.notesSortOrder}"/>
   <param name="selectedTab" value="#{catAcqOrdersHome.selectedTab}"/>

   <navigation from-action="#{catAcqOrdersHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/acqorders/AcqOrdersEdit.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{catAcqOrdersHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/acqorders/AcqOrdersEdit.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{catAcqOrdersHome.removeOrders}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/lists/CatAcqOrdersList.xhtml"/>
      </rule>
   </navigation>

   <navigation>
            <rule if-outcome="cancel" >
                <end-conversation before-redirect="true"/>
                <redirect view-id="/acqorders/AcqOrdersEdit.xhtml"/>
            </rule>
     </navigation>


</page>

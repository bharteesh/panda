<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resources PUBLIC "-//Sun Microsystems, Inc.//DTD Application Server 9.0 Resource Definitions //EN"
    "http://www.sun.com/software/appserver/dtds/sun-resources_1_3.dtd">
<resources>
    <jdbc-connection-pool
        name="catPool"
        datasource-classname="oracle.jdbc.pool.OracleDataSource"
        res-type="javax.sql.DataSource">
        <property name="database" value="jdbc:oracle:thin:@pr2ptcdev03.ithaka.org:2521:PODDB1"/> <!-- HSQLDB uses database instead of url -->
        <property name="url" value="jdbc:oracle:thin:@pr2ptcdev03.ithaka.org:2521:PODDB1"/>
        <property name="user" value="cat_dev"/>
        <property name="password" value="cat_dev1"/> <!-- Use the value "()" for an empty password -->
    </jdbc-connection-pool>
    <jdbc-resource
        jndi-name="catDatasource"
        pool-name="catPool"
        enabled="true"
        object-type="user"/>
</resources>

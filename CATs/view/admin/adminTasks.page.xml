<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      login-required="true"
      >

	<navigation from-action="#{bookVersionAndSubmissionCreator.create(rich:findComponent('filePath').value)}">
      <rule if-outcome="created">
         <redirect view-id="/admin/adminTasks.xhtml">
         	<message>Creating Book PDFs and Submission Records. You will receive an email about the outcome.</message>
         </redirect>
      </rule>
   </navigation>
   
   <navigation from-action="#{sidecarImportCreator.sidecarImport()}">
      <rule if-outcome="created">
         <redirect view-id="/admin/adminTasks.xhtml">
         	<message>Importing Sidecar prices. You will receive an email about the outcome,.</message>
         </redirect>
      </rule>
   </navigation>
   
   <navigation from-action="#{createImprintRecords.create()}">
      <rule if-outcome="created">
         <redirect view-id="/admin/adminTasks.xhtml">
         	<message>#{createImprintRecords.getMsg()}</message>
         </redirect>
      </rule>
   </navigation>
   
    <navigation from-action="#{createDoiAssignment.removeBookDois()}">
      <rule if-outcome="removed">
         <redirect view-id="/admin/adminTasks.xhtml">
         	<message>Remove DOIs report will be emailed to you shortly.</message>
         </redirect>
      </rule>
   </navigation>
   
   <navigation from-action="#{importBookVersionCoverInfo.importCoverInfo()}">
      <rule if-outcome="created">
         <redirect view-id="/admin/adminTasks.xhtml">
         	<message>Import Cover Info report will be emailed to you shortly.</message>
         </redirect>
      </rule>
   </navigation>
     
</page>

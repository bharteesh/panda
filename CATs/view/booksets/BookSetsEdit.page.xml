<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/lists/BookSetsList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{catBookSetsHome.wire}"/>

   <param name="catBookSetsFrom"/>
   <param name="id" value="#{catBookSetsHome.catBookSetsId}"/>
   <param name="catBookSetsId" value="#{catBookSetsHome.catBookSetsId}"/>
   <param name="selectedTab" value="#{catBookSetsHome.selectedTab}"/>
   <param name="notesSortOrder" value="#{catBookSetsHome.notesSortOrder}"/>

   <navigation from-action="#{catBookSetsHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/booksets/BookSetsEdit.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{catBookSetsHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/booksets/BookSetsEdit.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{catBookSetsHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/booksets/BookSetsEdit.xhtml"/>
      </rule>
   </navigation>

   <navigation>
   		<rule if-outcome="cancel" >
         <end-conversation before-redirect="true"/>
         <redirect view-id="/booksets/BookSetsEdit.xhtml"/>
    	</rule>
   </navigation>


</page>

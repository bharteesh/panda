<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/lists/CatScmList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{catScmHome.wire}"/>
   <param name="catScmFrom"/>
   <param name="id" value="#{catScmHome.catScmId}"/>
   <param name="catScmId" value="#{catScmHome.catScmId}"/>
   <param name="selectedTab" value="#{catScmHome.selectedTab}"/>

   <navigation from-action="#{catScmHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/scm/ScmEdit.xhtml"/>
      </rule>
   </navigation>
   <navigation from-action="#{catScmHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/scm/ScmEdit.xhtml"/>
      </rule>
   </navigation>
   
   <navigation from-action="#{catScmHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/lists/CatScmList.xhtml"/>
      </rule>
   </navigation>

   <navigation>
   		<rule if-outcome="cancel" >
         <end-conversation before-redirect="true"/>
         <redirect view-id="/scm/ScmEdit.xhtml"/>
    	</rule>
   </navigation>


</page>

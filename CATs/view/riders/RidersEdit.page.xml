<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/CatRidersList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{catRidersHome.wire}"/>

   <param name="catRidersFrom"/>
   <param name="catRidersId" value="#{catRidersHome.id}"/>
   <param name="id" value="#{catRidersHome.id}"/>


   <navigation from-action="#{catRidersHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/riders/RidersEdit.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{catRidersHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/riders/RidersEdit.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{catRidersHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/lists/CatRidersList.xhtml"/>
      </rule>
   </navigation>

   <navigation>
            <rule if-outcome="cancel" >
                <end-conversation before-redirect="true"/>
                <redirect view-id="/riders/RidersEdit.xhtml"/>
            </rule>
     </navigation>


</page>
